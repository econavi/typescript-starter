{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "baseUrl": "./",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "importHelpers": true,
    "esModuleInterop": true,
    "moduleDetection": "force",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": true,
    "skipLibCheck": true
  },
  "include": ["./**/*.ts"]
}
